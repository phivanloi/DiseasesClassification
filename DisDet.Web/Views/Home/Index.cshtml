@model HomeIndexModel
@{
    ViewData["Title"] = "Tiền chuẩn đoán bệnh";
}

<hr />
<div class="row">
    <div class="col-md-12">
        <form class="form-horizontal" method="post">
            <div class="form-group">
                <label asp-for="Syptom" class="col-sm-2 control-label">Triệu chứng</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="Syptom" required class="form-control" placeholder="Triệu chứng">
                    <span asp-validation-for="Syptom"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default btn-success">Chạy phân loại</button>
                </div>
            </div>
            @if (!string.IsNullOrEmpty(Model.Name))
            {
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        Bệnh nhân được phân loại về: <b>@Model.Name</b>, với độ chính xác <b>@Model.PerdictionPercentage.ToString("0,0") %</b>
                    </div>
                </div>
            }
        </form>
    </div>
</div>