@model HomeImageModel
@{
    ViewData["Title"] = "Phân loại bệnh theo triệu chứng";
}
<h5>Dữ liệu training gồm 3 bệnh Hắc lào, vảy lến, viêm da. Mỗi bệnh 10 ảnh download tại <a href="~/uploads/ImagesTraining.zip">đây</a></h5>
<hr />
<div class="row">
    <div class="col-md-12">
        <form class="form-horizontal" enctype="multipart/form-data" method="post">
            <div class="form-group">
                <label class="col-sm-12 control-label">Upload ảnh cần phân loại, Kích thước nhỏ hơn 1 Mb, chấp nhận dạng jpg và png</label>
                <div class="col-sm-12">
                    <input type="file" asp-for="FileUpload">
                    <span asp-validation-for="FileUpload"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12">
                    <button type="submit" class="btn btn-default btn-success">Chạy phân loại ảnh</button>
                    <p><i>Do dữ liệu traning ít lên độ chính xác không cao. Đơn vị nào có ảnh tranining tốt cho xin một bộ. 0906282026</i></p>
                </div>
            </div>
            @if (!string.IsNullOrEmpty(Model.Name))
            {
                <div class="form-group">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="col-sm-10  border border-success alert alert-success">
                        Bệnh nhân được phân loại về: <b>@Model.Name</b>, với độ chính xác <b>@Model.PerdictionPercentage.ToString("0,0") %</b>
                    </div>
                </div>
            }
        </form>
    </div>
</div>
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}